extends layout.pug

block content

  article.portfolio-intro

    h1 My Portfolio

    p Websites
      article.portfolio-project-thumbs
        .projects-box.box.grid
          .webcell
            a(href='https://www.characterwork.com')
              img.thumbnail(src='/static/images/ccbl.png', alt='Photo of Giles')
              h5 characterwork.com

            a(href=`https://www.mtdwi.com`)
              img.thumbnail(src='/static/images/mtdwi.png', alt='mtdwi.com site image')
              h5 mtdwi.com

              
    p Print Design
      article.portfolio-project-thumbs
        .projects-box.box.grid
          .webcell
            a(href='./public/images/4ballsCrop.png')
              img.thumbnail(src='public/images/4ballsCrop.png', alt='4 balls sample page')


            a(href='./public/images/cultureCrop.png')
              img.thumbnail(src='public/images/cultureCrop.png', alt='Culture crop sample page')
  
          
    p Here are some javascript projects. 


      article.portfolio-project-thumbs
        .projects-box.box.grid
          each project in projects 
            .cell
              a(href=`/project/${project.id}`)
              img.thumbnail(src=`${project.image_urls[0]}`, alt=`${project.project_name}`)
              h5 #{project.project_name}





